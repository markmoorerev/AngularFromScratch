/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    //this allows you to use decorators in the TS... JS doesn't allow it yet.
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    //this version of JS? Angular will recognize older browsers and change for them.
    "target": "es2015",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false
  }
}